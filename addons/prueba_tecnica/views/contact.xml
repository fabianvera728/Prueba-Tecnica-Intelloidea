<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="contact_tree" model="ir.ui.view">
        <field name="name">prueba.contact.tree</field>
        <field name="model">prueba.contact</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id="view_contact_kanban" model="ir.ui.view">
        <field name="name">prueba.contact.kanban</field>
        <field name="model">prueba.contact</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <strong>Name:</strong>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <strong>Direccion:</strong>
                                        <field name="address"/>
                                    </li>
                                    <li>
                                        <strong>Tel√©fono:</strong>
                                        <field name="phone"/>
                                    </li>
                                    <li>
                                        <strong>Email:</strong>
                                        <field name="email"/>
                                    </li>
                                    <li>
                                        <strong>Note:</strong>
                                        <field name="note"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="contact_action">
        <field name="name">Contactos</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">prueba.contact</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tus contactos
            </p>
        </field>
    </record>

    <menuitem
            id="menu_prueba_root"
            name="Prueba Tecnica"
            sequence="8"
    />

    <menuitem
            id="menu_prueba_contact_root"
            name="Contacts"
            parent="menu_prueba_root"
            sequence="8"
    />

    <menuitem
            id="menu_prueba_contact"
            name="Contacts"
            parent="menu_prueba_contact_root"
            action="contact_action"
            sequence="8"
    />


</odoo>